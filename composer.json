{
    "name": "dumplie/dumplie",
    "description": "Dumplie - simple but powerful shopping engine",
    "type": "framework",
    "license": "MIT",
    "require": {
        "php": "^7.0",
        "ext-mbstring": "*",

        "league/tactician": "^1.0",
        "ramsey/uuid": "^3.0",
        "coduo/php-to-string": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "phpspec/phpspec": "^2.5",
        "phpspec/prophecy": "^1.6",

        "doctrine/orm": "^2.5",
        "doctrine/dbal": "^2.5",

        "symfony/dependency-injection": "^3.1",
        "symfony/config": "^3.1",
        "symfony/http-kernel": "^3.1"
    },
    "suggest": {
        "doctrine/orm": "Allows usage of Doctrine ORM as a storage for application",
        "doctrine/dbal": "Allows usage of Doctrine DBAL as a storage for Metadata"
    },
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
