<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Dumplie\Domain\Customer\Cart" table="dumplie_customer_cart">
        <field name="currency" type="string" column="currency" length="3" nullable="false" />
        <field name="items" type="customer_cart_items" column="cart_items" nullable="false"/>
        <embedded name="id" class="Dumplie\Domain\Customer\CartId" use-column-prefix="false"/>
    </entity>
</doctrine-mapping>